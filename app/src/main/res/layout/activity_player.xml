<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_img"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".PlayerActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt_sn"
            android:layout_margin="@dimen/_20sdp"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:padding="@dimen/_10sdp"
            android:singleLine="true"
            android:text="Song name"
            android:textColor="#FFF"
            android:textSize="@dimen/_18ssp"
            android:textAlignment="center"
            android:textStyle="italic">
        </TextView>

        <ImageView
            android:id="@+id/image_view"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_200sdp"
            android:layout_marginBottom="@dimen/_8sdp"
            android:src="@drawable/music">
        </ImageView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp">

            <SeekBar
                android:id="@+id/seekbar"
                android:layout_width="@dimen/_190sdp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_alignParentBottom="true"
                android:layout_margin="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_40sdp">
            </SeekBar>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_sStart"
                android:layout_toLeftOf="@+id/seekbar"
                android:layout_centerInParent="true"
                android:layout_alignParentLeft="false"
                android:layout_marginLeft="@dimen/_15sdp"
                android:text="0:10"
                android:textColor="#fff"
                android:textSize="@dimen/_10ssp">
            </TextView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_sStop"
                android:layout_toRightOf="@+id/seekbar"
                android:layout_centerInParent="true"
                android:layout_alignParentRight="false"
                android:layout_marginRight="@dimen/_15sdp"
                android:text="4:10"
                android:textColor="#fff"
                android:textSize="@dimen/_10ssp">
            </TextView>

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/play_Button"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_70sdp"
                android:backgroundTint="@color/colorPrimary"
                android:layout_centerHorizontal="true"
                android:background="@drawable/ic_pause">
            </Button>

            <Button
                android:id="@+id/next_Button"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_toRightOf="@+id/play_Button"
                android:layout_marginTop="15dp"
                android:backgroundTint="@color/white"
                android:background="@drawable/ic_next">
            </Button>

            <Button
                android:id="@+id/previews_Button"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_toLeftOf="@+id/play_Button"
                android:layout_marginTop="15dp"
                android:backgroundTint="@color/white"
                android:background="@drawable/ic_prev">
            </Button>

            <Button
                android:id="@+id/btn_fast_next"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_toRightOf="@id/next_Button"
                android:layout_marginTop="@dimen/_16sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:backgroundTint="@color/white"
                android:background="@drawable/ic_fast_next">
            </Button>


            <Button
                android:id="@+id/btn_fast_prev"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_toLeftOf="@id/previews_Button"
                android:layout_marginTop="@dimen/_16sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:backgroundTint="@color/white"
                android:background="@drawable/ic_fast_prev">
            </Button>


            <com.chibde.visualizer.BarVisualizer
                android:id="@+id/visualizer"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:layout_alignParentBottom="true">

            </com.chibde.visualizer.BarVisualizer>



        </RelativeLayout>




    </LinearLayout>




</LinearLayout>